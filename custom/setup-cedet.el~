(require 'cc-mode)
(require 'semantic)

(global-semanticdb-minor-mode 1)
(global-semantic-idle-scheduler-mode 1)
(global-semantic-stickyfunc-mode 1)

(semantic-mode 1)

;; Enable EDE only in C/C++
(require 'ede)
(add-to-list 'c-mode-hook 'ede-minor-mode)
(add-to-list 'c++-mode-hook 'ede-minor-mode)

(provide 'setup-cedet)
